@model IEnumerable<Onion.AppCore.Entities.Team>

<div class="container mainSize col-12">
    <div class="row rowSize">
        <aside class=" col-3 mt-3">

            <div class="list-group">
                <a href="~/Team/Show" class="list-group-item list-group-item-action active" aria-current="true">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Teams</h5>
                        <small>Now</small>
                    </div>

                </a>
                <a href="~/Department/Show" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1">Departments</h6>
                    </div>

                </a>
                <a href="#" class="list-group-item list-group-item-action ">
                    <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1">Employees</h6>
                    </div>

                </a>
                <a href="~/Role/Show" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1">Roles</h6>
                    </div>

                </a>
                <a href="~/DepartmentType/Show" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h6 class="mb-1">Department Types</h6>
                    </div>
                </a>
            </div>
            <div class="row  mt-4 justify-content-center">
                <a href="~/Team/Create" class="btn btn-primary col-9 NewProject ">New Team</a>
            </div>
        </aside>


        <div class=" col-9 CreateProj">


            <table class="table table-striped table-hover mt-4 col-11">
                <thead>
                    <tr>
                        <th scope="col">
                            №
                        </th>

                        <th scope="col">
                            <a class="m-1">Name</a>
                        </th>

                        <th scope="col">
                            <a class="m-1"> Create Date  </a>
                        </th>

                        <th scope="col">
                            <a class="m-1">HeadName </a>
                        </th>

                        <th scope="col">
                            <a class="m-1">Emp.</a>
                        </th>

                        <th scope="col">
                            <a class="m-1">Tech-es</a>
                        </th>

                        <th scope="col">
                            <a class="m-1">Options</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1;

                        foreach (var team in Model)
                        {
                            <tr>

                                <td scope="row">@i</td>
                                <td scope="row">@team.Name</td>
                                <td scope="row">@team.CreateDate.ToShortDateString()</td>
                                <td scope="row">@team.HeadName</td>
                                <td scope="row">@team.EmployeeAmount</td>
                                <td scope="row">@team.Technologies</td>
                                <td class="col-2 px-4">


                                    <a class="icons" asp-action="Edit" asp-route-id="@team.Id" asp-controller="Team">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                             class="bi bi-pencil-square" viewBox="0 0 20 20">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd"
                                                  d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                        </svg>
                                    </a>

                                    <a class="icons third" asp-controller="Team" asp-route-id="@team.Id" asp-action="Delete">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                             class="bi bi-trash" viewBox="0 0 20 20">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                            <path fill-rule="evenodd"
                                                  d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                        </svg>
                                    </a>

                                </td>
                            </tr>
                            i++;
                        } }
                </tbody>
            </table>
        </div>
    </div>

</div>

